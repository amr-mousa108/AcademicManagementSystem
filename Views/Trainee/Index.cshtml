@model List<Trainee>

@{
    ViewData["Title"] = "Trainees List";
}

<div class="container mt-4">
    <h2 class="mb-4">Trainees</h2>

    <div class="row">
        @foreach (var trainee in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="~/Images/@trainee.ImgUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@trainee.Name">
                    <div class="card-body">
                        <h5 class="card-title">@trainee.Name</h5>
                        <p class="card-text mb-2">
                            <strong>Department:</strong> @trainee.Department?.Name <br />
                            <strong>Address:</strong> @trainee.Address
                        </p>

                        <a asp-action="ShowResult" asp-route-id="@trainee.Id"
                           class="btn btn-primary mt-3 w-100">Show Results</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@model IEnumerable<CrsResult>

@{
    ViewData["Title"] = "Course Results";
}

<div class="container my-5">
    <h2 class="mb-4">Course Results</h2>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Trainee</th>
                <th>Course</th>
                <th>Degree</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Trainee?.Name</td>
                    <td>@item.Course?.Name</td>
                    <td>@item.Degree</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

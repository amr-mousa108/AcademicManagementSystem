@model ICollection<Instructor>


<h2 class="my-4 text-center">All Instructors</h2>
<a asp-controller="Instructor" asp-action="New" class="btn btn-primary">Add New Instructor</a>
<br />

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th style="width: 20%;">Name</th>
                <th style="width: 15%;">Salary</th>
                <th style="width: 25%;">Department</th>
                <th style="width: 25%;">Course</th>
                <th style="width: 15%;">Details</th>
                <th style="width: 15%;">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Salary</td>
                    <td>@item.Department?.Name</td>
                    <td>@item.Course?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>





